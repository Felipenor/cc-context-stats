# EditorConfig for claude-statusline project
# https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Shell scripts
[*.{sh,bash}]
indent_style = space
indent_size = 4

# Python
[*.py]
indent_style = space
indent_size = 4
max_line_length = 100

# JavaScript
[*.js]
indent_style = space
indent_size = 4
max_line_length = 100

# JSON files
[*.json]
indent_style = space
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# TOML files
[*.toml]
indent_style = space
indent_size = 4

# Markdown
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Makefile
[Makefile]
indent_style = tab

# Bats test files
[*.bats]
indent_style = space
indent_size = 4
